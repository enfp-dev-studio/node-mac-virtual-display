{
  "name": "node-mac-virtual-display",
  "version": "1.0.10",
  "description": "A Native module to create and handle virtual display on macOS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "gypfile": true,
  "scripts": {
    "build": "npm run build:ts && node-gyp rebuild",
    "build:ts": "tsc",
    "clean": "node-gyp clean",
    "build:binary": "pkg examples/diagnostic.js --targets node18-macos-x64,node18-macos-arm64 --out-path dist --public && cp build/Release/virtual_display.node dist/",
    "rebuild:electron": "electron-rebuild -f -w node-mac-virtual-display",
    "test:electron": "npm run rebuild:electron && electron examples/electron/main.js",
    "lint": "clang-format --dry-run -Werror ./src/virtual_display.mm && prettier --check index.js",
    "format": "clang-format -i ./src/virtual_display.mm && prettier --write index.js",
    "test": "./node_modules/.bin/mocha --reporter spec",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ENFP-Dev-Studio/node-mac-virtual-display"
  },
  "author": "ENFP-Dev-Studio",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/bindings": "^1.5.5",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "chai": "^6.2.1",
    "clang-format": "^1.8.0",
    "electron": "^40.1.0",
    "eslint": "^9.39.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "mocha": "^11.7.5",
    "node-gyp": "^10.3.1",
    "pkg": "^5.8.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^8.5.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.mm": [
      "clang-format -i"
    ]
  },
  "os": [
    "darwin"
  ],
  "publishConfig": {
    "@enfp-dev-studio:registry": "https://npm.pkg.github.com"
  }
}
